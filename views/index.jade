doctype html
html(ng-app='directory')
  head
    title Directory
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-controller='directoryController')
    h1 Directory Lookup
    p Welcome to a directory lookup service.
    input.form-control(type='text', ng-model='query',
      placeholder='Search here' ng-change='updateQuery(query)')
    p {{results}}
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular.min.js')
    script(src='https://cdn.socket.io/socket.io-1.3.2.js')
    script(src='javascripts/core.js')
